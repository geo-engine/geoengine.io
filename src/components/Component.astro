---
interface Props {
    title: string,
    subtitle: string,
}

const { title, subtitle } = Astro.props;
---

<!-- Card -->
<div class="group flex flex-col h-full bg-white border border-gray-200 shadow-2xs rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70">
    <div class="h-52 flex flex-col justify-center items-center bg-second-lightblue rounded-t-xl">
      <slot name="image" />
    </div>
    <div class="p-4 md:p-6">
      <span class="block mb-1 text-xs font-semibold uppercase text-second-lightblue">
        {subtitle}
      </span>
      <h3 class="text-xl font-semibold text-gray-800 dark:text-neutral-300 dark:hover:text-white">
        {title}
      </h3>
      <p class="mt-3 text-gray-500 dark:text-neutral-500">
        <slot/>
      </p>
    </div>
    <div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 dark:border-neutral-700 dark:divide-neutral-700">
        <slot name="link"/>
    </div>
  </div>
  <!-- End Card -->